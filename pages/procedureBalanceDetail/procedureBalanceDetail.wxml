<view class="container" style="padding:50rpx;align-items:left;background-color:rgb(242, 242, 242)">
  <view class="section">
    <view class="flex-wrp" style="flex-direction:row;">
      <label  style="color:#6495ED">工序号：{{procedureNumber}}</label>
      <label  style="color:#6495ED">工序：{{procedureName}}</label>
    </view>
    
    <scroll-view scroll-x="true">
    <view class="table">
      <view class="tr bg-w">
        <view class="th" style='width:40%'>颜色</view>
        <view class="th" style='width:40%'>尺码</view>
        <view class="th" style='width:40%'>已做</view>
        <view class="th" style='width:40%'>订单量</view>
        <view class="th" style='width:40%'>好片数</view>
        <view class="th" style='width:40%'>差异</view>
      </view>
      <block wx:for="{{records}}">
        <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
          <view class="td" style='width:40%'>{{item.color}}</view>
          <view class="td" style='width:40%'>{{item.size}}</view>
          <view class="td" style='width:40%'>{{item.productionCount}}</view>
          <view class="td" style='width:40%'>{{item.orderCount}}</view>
          <view class="td" style='width:40%'>{{item.cutCount}}</view>
          <view class="td" style='width:40%'>{{item.leakCount}}</view>
        </view>
        <view class="tr" wx:else>
          <view class="td" style='width:40%'>{{item.color}}</view>
          <view class="td" style='width:40%'>{{item.size}}</view>
          <view class="td" style='width:40%'>{{item.productionCount}}</view>
          <view class="td" style='width:40%'>{{item.orderCount}}</view>
          <view class="td" style='width:40%'>{{item.cutCount}}</view>
          <view class="td" style='width:40%'>{{item.leakCount}}</view>
        </view>
      </block>
    </view>
    </scroll-view>
  </view>

  <view class="section">
    <view class="flex-wrp" style="flex-direction:row;margin-top:15px;">
      <label style="color:#6495ED">员工详情</label>
    </view>
    <scroll-view scroll-x="true">
    <view class="table">
      <view class="tr bg-w">
        <view class="th" style='width:20%'>组名</view>
        <view class="th" style='width:20%'>工号</view>
        <view class="th" style='width:30%'>姓名</view>
        <view class="th" style='width:30%'>数量</view>
      </view>
      <block wx:for="{{person}}" wx:key="{{employeeNumber}}">
        <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
          <view class="td" style='width:20%'>{{item.groupName}}</view>
          <view class="td" style='width:20%'>{{item.employeeNumber}}</view>
          <view class="td" style='width:30%'>{{item.employeeName}}</view>
          <view class="td" style='width:30%'>{{item.productionCount}}</view>
        </view>
        <view class="tr" wx:else>
          <view class="td" style='width:20%'>{{item.groupName}}</view>
          <view class="td" style='width:20%'>{{item.employeeNumber}}</view>
          <view class="td" style='width:30%'>{{item.employeeName}}</view>
          <view class="td" style='width:30%'>{{item.productionCount}}</view>
        </view>
      </block>
    </view>
    </scroll-view>
  </view>
  
</view>