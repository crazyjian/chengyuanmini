page {
  width:100%;
  height:100%;
}

label {
  width:100%;
  background-color:white;
  padding:20rpx;
}

.section {
  width:100%;
  height:100%;
}

.flex-wrp {
  display: flex;
  margin-bottom:25rpx;
}

.button{
  
  margin-bottom: 25rpx;
  text-align: center;
}

.btn {
  width: 600rpx;
  background-color: #6495ED;
  color: #FFF;
  font-weight: bold;
  border-radius: 20rpx;
}

.title {
  text-align:center;
  margin-top:15rpx;
  font-size:60rpx;
  color:rgb(19, 91, 224);
}
.table {
  border-top: 1px solid darkgray;
  border-right: 1px solid darkgray;
  border-bottom: 1px solid darkgray;
  width: 1200rpx;
  overflow-x: auto;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
}
.td {
    width:50%;
    height: 100%;
    justify-content: center;
    text-align: center;
    display: flex;
    align-items: center;
    border-top: 1px solid darkgray;
    border-left: 1px solid darkgray;
}
.bg-w{
  background: white;
}
.bg-g{
  background: #f9f9f9;
}
.th {
  width: 50%;
  justify-content: center;
  display: flex;
  height: 2rem;
  align-items: center;
  font-weight: bold;
  border-left: 1px solid darkgray;
}

.searchItem {
  width:100%;
  height:80rpx;
  display:flex;
  align-items: center;
  background:#fff;
  margin-bottom: 20rpx;
}

.searchItemInput {
  display:inline-block;
  height:100%;
  margin-left:20rpx;
}
text{
  margin-left:20rpx;
}
.scrollview {
  height: 40%;
  width:70%;
  margin-left:140rpx;
  position: absolute;
  top: 270rpx;
  z-index:1000;
}

.itemview {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* width:70%; */
  /* margin-left:140rpx; */
  padding: 10rpx 10rpx 10rpx 10rpx;
  border-bottom: 1px solid #f1ecec;
  background-color: #f1ecec;
}