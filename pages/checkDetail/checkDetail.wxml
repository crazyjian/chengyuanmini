<wxs module="we">
 var toFixed = function (value) {
 return value.toFixed(2);
}
module.exports = {
  toFixed :toFixed
}
</wxs>
<view class="container" style="padding-top:40rpx;align-items:center;background-color:rgb(242, 242, 242)">
  <view class="section">
    <view class="flex-wrp" style="display: flex;flex-direction:row;">
      <div class='inputItem' style="margin-right:20rpx;display:flex;flex-direction:row;">
        <view style="margin-right:30rpx;margin-left:60rpx">选择月份：</view>
        <picker mode="date" header-text="选择月份" fields="month" value="{{time}}" start="2020-10" end="2025-10" bindchange="selectDataTime">
          <view class="date">{{time}}</view>
        </picker>
      </div>
    </view>
    <!-- <view class='button'>
      <button class='btn' bindtap='search'>查询</button>
    </view> -->
    <view>  
      <view wx:if="{{records[0] == '无记录'}}">
        <view>无记录</view>
      </view>
      <view wx:else>
        <block wx:for="{{records}}">
          <view style="padding-top:40rpx;padding-bottom:20rpx;">
            {{item.signDate}}
            <view class="table">
              <view class="tr" style="margin-top: 10rpx;margin-bottom: 10rpx;">
                <view wx:if="{{!item.in1 || item.in1=='未签到'}}" class="td" style=' background-color:rgb(206,39,60)'>{{item.in1}}
                </view> 
                <view wx:elif="{{item.in1 <= recordRuleList[0]}}" class="td" style='background-color:rgb(45,202,147)'>{{item.in1}}
                </view>
                <view wx:else class="td" style='background-color:orange'>{{item.in1}}
                </view>
                <view wx:if="{{!item.in2 || item.in2=='未签到'}}" class="td" style=' background-color:rgb(206,39,60)'>{{item.in2}}
                </view>
                <view wx:elif="{{item.in2 <= recordRuleList[2]}}" class="td" style='background-color:rgb(45,202,147)'>{{item.in2}}
                </view>
                <view wx:else class="td" style='background-color:orange'>{{item.in2}}
                </view>
                <view wx:if="{{!item.in3 || item.in3=='未签到'}}" class="td" style=' background-color:rgb(206,39,60)'>{{item.in3}}
                </view>
                <view wx:elif="{{item.in3 <= recordRuleList[4]}}" class="td" style='background-color:rgb(45,202,147)'>{{item.in3}}
                </view>
                <view wx:else class="td" style='background-color:orange'>{{item.in3}}
                </view>              
              </view>
              <view class="tr" style="margin-top: 10rpx;margin-bottom: 10rpx;">
                <view wx:if="{{!item.out1 || item.out1=='未签到'}}" class="td" style=' background-color:rgb(206,39,60)'>{{item.out1}}
                </view>
                <view wx:elif="{{item.out1 >= recordRuleList[1]}}" class="td" style='background-color:rgb(45,202,147)'>{{item.out1}}
                </view>
                <view wx:else class="td" style='background-color:orange'>{{item.out1}}
                </view>
                <view wx:if="{{!item.out2 || item.out2=='未签到'}}" class="td" style=' background-color:rgb(206,39,60)'>{{item.out2}}
                </view>
                <view wx:elif="{{item.out2 >= recordRuleList[3]}}" class="td" style='background-color:rgb(45,202,147)'>{{item.out2}}
                </view>
                <view wx:else class="td" style='background-color:orange'>{{item.out2}}
                </view>
                <view wx:if="{{!item.out3 || item.out3=='未签到'}}" class="td" style=' background-color:rgb(206,39,60)'>{{item.out3}}
                </view>
                <view wx:elif="{{item.out3 >= recordRuleList[5]}}" class="td" style='background-color:rgb(45,202,147)'>{{item.out3}}
                </view>
                <view wx:else class="td" style='background-color:orange'>{{item.out3}}
                </view>
              </view>
            </view>
          </view>
        </block>
      </view>
    </view> 
  </view>
</view>