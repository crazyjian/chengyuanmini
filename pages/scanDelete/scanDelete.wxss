page {
  width:100%;
  height:100%;
}

label {
  width:100%;
  background-color:white;
  padding:20rpx;
}

.section {
  width:100%;
  height:100%;
}

.flex-wrp {
  display: flex;
  margin-bottom:25rpx;
}

.button{
  
  margin-bottom: 25rpx;
  text-align: center;
}

.btn {
  width: 600rpx;
  background-color: #6495ED;
  color: #FFF;
  font-weight: bold;
  border-radius: 20rpx;
  margin-top: 10px;
}

.title {
  text-align:center;
  margin-top:15rpx;
  font-size:30rpx;
}
.table {
  border-top: 1px solid darkgray;
  border-right: 1px solid darkgray;
  border-bottom: 1px solid darkgray;
  width: 1200rpx;
  overflow-x: auto;
}

.tableWin {
  border-top: 1px solid darkgray;
  border-right: 1px solid darkgray;
  border-bottom: 1px solid darkgray;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
}
.td {
    width:50%;
    height: 100%;
    justify-content: center;
    text-align: center;
    display: flex;
    align-items: center;
    border-top: 1px solid darkgray;
    border-left: 1px solid darkgray;
}

.bg-w{
  background: white;
}
.bg-g{
  background: #f9f9f9;
}
.th {
  width: 50%;
  justify-content: center;
  display: flex;
  height: 2rem;
  align-items: center;
  font-weight: bold;
  border-left: 1px solid darkgray;
}

text{
  margin-left:20rpx;
}

.toast-box {
  width: 100%;
  height: 100%;
  opacity: 1;
  position: fixed;
  top: 0px;
  left: 0px;
  z-index:1001;
}

.toastbg {
  opacity: 0.7;
  background-color: black;
  position: absolute;
  width: 100%;
  min-height: 100vh;
}

.showToast {
  position: absolute;
  opacity: 1;
  width: 90%;
  margin-left: 5%;
  margin-top: 25%;
}

.toast-title {
  padding-left: 5%;
  padding-right: 5%;
  background-color: #6495ED;
  color: white;
  padding-top: 2vh;
  padding-bottom: 2vh;
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
  justify-content: space-between;
  display: flex;
}

.toast-main {
  /* padding-top: 2vh; */
  /* padding-bottom: 2vh; */
  background-color: white;
  text-align: center;
}

.toast-button {
  display: flex;
}

.button1 {
  width: 50%;
}

.button1 button {
  width: 100%;
  background-color: #6495ED;
  color: white;
  border-radius: 0px;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}