<view class="container" style="padding-top:40rpx;align-items:center;background-color:rgb(242, 242, 242)">
  
  <view class="section">
    <view class="flex-wrp" style="display: flex;flex-direction:row;">
      <div class='inputItem' style="margin-right:20rpx;display:flex;flex-direction:row;">
        <view>从：</view>
        <picker mode="date" style="width:70%" value="{{dateFrom}}" bindchange="bindFromChange">
          <view class="picker">
            {{dateFrom}}
          </view>
        </picker>
      </div>
      <div class='inputItem' style="display:flex;flex-direction:row;">
        <view>到：</view>
        <picker mode="date" style="width:70%" value="{{dateTo}}"  bindchange="bindToChange">
          <view class="picker">
          {{dateTo}}
          </view>
        </picker>
      </div>
    </view>
    <view class='searchItem' style="margin-top:20rpx;">
      <text>订单号</text>
      <input class='searchItemInput' name='orderName' placeholder='请输入您的订单号' value="{{orderName}}" bindinput='getOrderName'></input>
      <scroll-view scroll-y="true" class="scrollview" style='z-index:{{zIndex}}'>
        <view wx:for="{{bindSource}}">
          <view id="{{item}}" bindtap="itemtap" class="itemview">{{item}}</view>
        </view>
      </scroll-view>
    </view>
    <view class='searchItem'>
      <text style="margin-left: 55rpx;">组名</text>
      <picker bindchange="bindGroupNameChange" value="{{g_index}}" range="{{groupNames}}" style="margin-left: 20rpx;">
          <view class="picker">
            {{groupNames[g_index]}}
          </view>
        </picker>
    </view>
    <view class='button'>
      <button class='btn' bindtap='search'>查询</button>
    </view>
    <scroll-view scroll-x="true">  
    <view class="table">
      <view class="tr bg-w">
        <view class="th" style='width:17%'>工序号</view>
        <view class="th" style='width:25%'>工序名</view>
        <view class="th" style='width:20%'>订单数</view>
        <view class="th" style='width:20%'>好片数</view>
        <view class="th" style='width:20%'>已做</view>
        <view class="th" style='width:20%'>差异</view>
      </view>
      <block wx:for="{{records}}" wx:key="{{procedureCode}}">
        <view class="tr bg-g"  bindtap='detail' data-procedureNumber="{{item.procedureNumber}}" data-procedureName="{{item.procedureName}}" wx:if="{{index % 2 == 0}}">
          <view class="td" style='width:17%'>{{item.procedureNumber}}</view>
          <view class="td" style='width:25%'>{{item.procedureName}}</view>
          <view class="td" style='width:20%'>{{item.orderCount}}</view>
          <view class="td" style='width:20%'>{{item.cutCount}}</view>
          <view class="td" style='width:20%'>{{item.productionCount}}</view>
          <view class="td" style='width:20%'>{{item.differenceCount}}</view>
        </view>
        <view class="tr" bindtap='detail' data-procedureNumber="{{item.procedureNumber}}" data-procedureName="{{item.procedureName}}" wx:else>
          <view class="td" style='width:17%'>{{item.procedureNumber}}</view>
          <view class="td" style='width:25%'>{{item.procedureName}}</view>
          <view class="td" style='width:20%'>{{item.orderCount}}</view>
          <view class="td" style='width:20%'>{{item.cutCount}}</view>
          <view class="td" style='width:20%'>{{item.productionCount}}</view>
          <view class="td" style='width:20%'>{{item.differenceCount}}</view>
        </view>
      </block>
    </view>
    </scroll-view>  

  </view>
</view>