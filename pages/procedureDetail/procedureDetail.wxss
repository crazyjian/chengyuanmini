}

.section {
  width:95%;
}

text{
  margin-left:20rpx;
}

label{
  color:#6495ED
}

.inputItem {
  width:100%;
  background-color:white;
  padding:10rpx;
}

.searchItem {
  width:100%;
  height:80rpx;
  display:flex;
  align-items: center;
  background:#fff;
  margin-bottom: 20rpx;
}

.searchItemInput {
  display:inline-block;
