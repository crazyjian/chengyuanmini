<wxs module="we">
 var toFixedFour = function (value) {
 return value.toFixed(4);
}
var toFixedTwo = function (value) {
 return value.toFixed(2);
}
module.exports = {
  toFixedTwo :toFixedTwo,
  toFixedFour:toFixedFour
}
</wxs>
